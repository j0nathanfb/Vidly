@model List<Vidly.Models.Customer>

<h1>Customers</h1>

@if (Model.Count == 0)
{
    <p>There are no customers to display</p>
}
else
{
    <table>
        @foreach (var customer in @Model)
        {
            <tr><td>@Html.ActionLink(customer.Name, "Details", new { id = customer.Id })</td></tr>
        }
    </table>
}
