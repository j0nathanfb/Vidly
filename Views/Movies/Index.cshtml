@using Vidly.Models
@model List<Vidly.Models.Movie>  

<h1>Movies</h1>

@if (Model is null || Model.Count == 0)
{
    <p>No movies to display</p>
}
else
{
    <table>
        @foreach (var movie in Model)
        {
            <tr><td>@Html.ActionLink(movie.Name, "Details", new  {id=movie.Id})</td></tr>
        }
    </table>
   
}
